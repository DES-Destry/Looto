<Application x:Class="Looto.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Looto"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="ColorStyles" Source="Styles/Colors.xaml"/>
                <ResourceDictionary x:Name="FontStyles" Source="Styles/Fonts.xaml"/>
                <ResourceDictionary x:Name="StandartTextBox" Source="Styles/StandartTextBox.xaml"/>
                <ResourceDictionary x:Name="StandartButton" Source="Styles/StandartButton.xaml"/>
                <ResourceDictionary x:Name="StandartRadioButton" Source="Styles/StandartRadioButton.xaml"/>
                <ResourceDictionary x:Name="StandartCheckBox" Source="Styles/StandartCheckBox.xaml"/>
                <ResourceDictionary x:Name="StandartScrollBar" Source="Styles/StandartScrollBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
