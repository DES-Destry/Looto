<Window x:Class="Looto.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:Looto.Models" 
        xmlns:viewmodels="clr-namespace:Looto.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="Looto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Height="500" 
        Width="800">

    <Window.Resources>
        <models:VisibilityConverter x:Key="VisibilityConverter"/>
    </Window.Resources>

    <Border BorderThickness="2"
            BorderBrush="{StaticResource MainBrush}">
        <StackPanel>
            <Grid Height="25"
                  Background="{StaticResource StaticBgBrush}"
                  MouseLeftButtonDown="Border_MouseLeftButtonDown">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">

                    <Button x:Name="ExitButton"
                            Grid.Column="2"
                            Width="20" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="1,1,7,1"
                            Cursor="Hand"
                            Click="ExitButton_Click">

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">

                                <Grid>
                                    <Image x:Name="ButtonImage" 
                                       Source="/Looto;component/Images/exit_white.png"/>
                                </Grid>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ButtonImage" 
                                            Property="Source" 
                                            Value="/Looto;component/Images/exit_red.png"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="ButtonImage" 
                                            Property="Source" 
                                            Value="/Looto;component/Images/exit_gray.png"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>

            </Grid>

            <Grid Background="{StaticResource ActiveBgBrush}"
                  Height="473">
                <StackPanel>
                    <TextBox Style="{StaticResource StandartTextBox}"
                             Text="{Binding Host}"
                             Margin="50, 10, 50, 10"
                             Tag="Host for scanning"/>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <RadioButton Style="{StaticResource RadioButtonBase}"
                                     IsChecked="{Binding MultiplePorts}"
                                     Margin="5"/>
                        <TextBlock Text="Write multiple ports"
                                   VerticalAlignment="Center"
                                   FontFamily="{StaticResource BaseFont}"
                                   FontSize="{StaticResource Regular}"
                                   Foreground="{StaticResource WhiteBrush}"/>
                        <Border Width="5"
                                Margin="10, 0, 10, 0"
                                CornerRadius="2"
                                Background="{StaticResource WhiteBrush}"/>
                        <RadioButton Style="{StaticResource RadioButtonBase}"
                                     IsChecked="{Binding RangeOfPorts}"
                                     Margin="5"/>
                        <TextBlock Text="Enter a range of ports"
                                   VerticalAlignment="Center"
                                   FontFamily="{StaticResource BaseFont}"
                                   FontSize="{StaticResource Regular}"
                                   Foreground="{StaticResource WhiteBrush}"/>
                    </StackPanel>
                    <StackPanel Margin="0, 20, 0, 0"
                                Visibility="{Binding MultiplePorts, Converter={StaticResource VisibilityConverter}}">
                        <TextBlock Text="TCP"
                                   TextAlignment="Center"
                                   FontFamily="{StaticResource BaseFont}"
                                   FontSize="{StaticResource Regular}"
                                   Foreground="{StaticResource WhiteBrush}"/>
                        <TextBox Style="{StaticResource StandartTextBox}"
                                 Text="{Binding TcpPorts}"
                                 Margin="50, 0, 50, 10"
                                 Tag="TCP ports comma separated(For example: 20, 80, 443, 8080)"/>
                        <TextBlock Text="UDP"
                                   TextAlignment="Center"
                                   FontFamily="{StaticResource BaseFont}"
                                   FontSize="{StaticResource Regular}"
                                   Foreground="{StaticResource WhiteBrush}"/>
                        <TextBox Style="{StaticResource StandartTextBox}"
                                 Text="{Binding UdpPorts}"
                                 Margin="50, 0, 50, 10"
                                 Tag="UDP ports comma separated(For example: 20, 80, 443, 8080)"/>
                        <Border Height="4"
                                Margin="30, 10, 30, 0"
                                CornerRadius="2"
                                Background="{StaticResource WhiteBrush}"/>
                    </StackPanel>
                    <StackPanel Margin="0, 20, 0, 0"
                                Visibility="{Binding RangeOfPorts, Converter={StaticResource VisibilityConverter}}">
                        <TextBlock Text="TCP"
                                   TextAlignment="Center"
                                   FontFamily="{StaticResource BaseFont}"
                                   FontSize="{StaticResource Regular}"
                                   Foreground="{StaticResource WhiteBrush}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Style="{StaticResource StandartTextBox}"
                                     Text="{Binding FromTcpPort}"
                                     Margin="240, 0, 25, 10"
                                     Tag="From TCP port"/>
                            <TextBox Style="{StaticResource StandartTextBox}"
                                     Text="{Binding ToTcpPort}"
                                     Grid.Column="1"
                                     Margin="25, 0, 240, 10"
                                     Tag="To TCP port"/>
                        </Grid>
                        <TextBlock Text="UDP"
                                   TextAlignment="Center"
                                   FontFamily="{StaticResource BaseFont}"
                                   FontSize="{StaticResource Regular}"
                                   Foreground="{StaticResource WhiteBrush}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Style="{StaticResource StandartTextBox}"
                                     Text="{Binding FromUdpPort}"
                                     Margin="240, 0, 25, 10"
                                     Tag="From UDP port"/>
                            <TextBox Style="{StaticResource StandartTextBox}"
                                     Text="{Binding ToUdpPort}"
                                     Grid.Column="1"
                                     Margin="25, 0, 240, 10"
                                     Tag="To UDP port"/>
                        </Grid>
                        <Border Height="4"
                                Margin="30, 10, 30, 0"
                                CornerRadius="2"
                                Background="{StaticResource WhiteBrush}"/>
                    </StackPanel>
                    <TextBlock FontFamily="{StaticResource BaseFont}"
                               FontSize="{StaticResource Small}"
                               Foreground="{StaticResource RedBrush}"
                               Visibility="{Binding WrongInput, Converter={StaticResource VisibilityConverter}}"
                               TextAlignment="Center"
                               Text="Wrong input!"/>
                    <Button Style="{StaticResource ButtonStyle}"
                            FontSize="{StaticResource Regular}"
                            Command="{Binding Scan}"
                            Width="200"
                            Margin="25"
                            Content="Scan"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
